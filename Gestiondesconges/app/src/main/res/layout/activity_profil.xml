<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Photo de profil circulaire -->
        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_profile_placeholder"
            android:contentDescription="Photo de profil"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/profile_circle_background"
            android:padding="4dp" />

        <!-- CardView contenant les infos -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:padding="16dp"
            android:backgroundTint="@color/colorWhite">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle"
                android:dividerPadding="8dp">

                <!-- Nom -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_profile"
                        android:tint="@color/colorPrimary"
                        android:layout_marginEnd="12dp" />
                    <TextView
                        android:id="@+id/textNom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meriam Ait Sghir"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/textPrimary" />
                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_email"
                        android:tint="@color/colorPrimary"
                        android:layout_marginEnd="12dp" />
                    <TextView
                        android:id="@+id/textEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="meriam@adria.ma"
                        android:textSize="16sp"
                        android:textColor="@color/textPrimary" />
                </LinearLayout>

                <!-- Poste -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_work"
                        android:tint="@color/colorPrimary"
                        android:layout_marginEnd="12dp" />
                    <TextView
                        android:id="@+id/textPoste"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Développeuse mobile"
                        android:textSize="16sp"
                        android:textColor="@color/textPrimary" />
                </LinearLayout>

                <!-- Département -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_department"
                        android:tint="@color/colorPrimary"
                        android:layout_marginEnd="12dp" />
                    <TextView
                        android:id="@+id/textDepartement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IT"
                        android:textSize="16sp"
                        android:textColor="@color/textPrimary" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bouton Modifier (optionnel) -->
        <Button
            android:id="@+id/btnEditProfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modifier le profil"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:drawableStart="@drawable/ic_edit"
            android:padding="12dp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
